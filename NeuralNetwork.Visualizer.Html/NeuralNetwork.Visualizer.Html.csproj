<Project Sdk="Microsoft.NET.Sdk.Razor">

  <PropertyGroup>
    <TargetFramework>netstandard2.1</TargetFramework>
    <RazorLangVersion>3.0</RazorLangVersion>
  </PropertyGroup>

  <ItemGroup>
    <Content Remove="wwwroot\DrawableSurface\drawable-surface.js" />
    <Content Remove="wwwroot\neuralnetwork-visualizer-instance.js" />
    <Content Remove="wwwroot\styles.css" />
    <Content Remove="wwwroot\Tooltip\tooltip.css" />
